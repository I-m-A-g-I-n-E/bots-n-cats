{
  "name": "bots-n-cats",
  "version": "1.0.0",
  "description": "GitHub Activity Soundtrack SaaS - Where your code purrs and your deploys meow!",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/audio-core",
    "packages/webhook-server",
    "packages/music-engine",
    "packages/cat-sounds",
    "packages/streaming-server"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "dev": "npm run dev --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
