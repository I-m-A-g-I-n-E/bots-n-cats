{
  "name": "bots-n-cats",
  "version": "1.0.0",
  "description": "GitHub Activity Soundtrack SaaS - Where your code purrs and your deploys meow!",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/audio-core",
    "packages/webhook-server",
    "packages/music-engine",
    "packages/cat-sounds",
    "packages/streaming-server"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "dev": "npm run dev --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "start:integrated": "npx tsx integrated-server.ts",
    "start": "npm run start:integrated"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.3.3",
    "web-audio-api": "^0.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
